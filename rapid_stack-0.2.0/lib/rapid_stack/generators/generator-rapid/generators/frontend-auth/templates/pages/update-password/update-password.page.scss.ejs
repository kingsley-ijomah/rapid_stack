.update-password-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  max-width: 500px;
  margin: 0 auto;
  padding: 20px;
}

.update-password-form {
  width: 100%;
}

.form-field {
  margin-bottom: 10px;
  border-radius: 8px;
  --background: var(--ion-color-light);
  --border-radius: 8px;
  --padding-start: 15px;
  --padding-end: 15px;
  --highlight-height: 0;
}

ion-input {
  --padding-start: 10px;
  font-size: 16px;
}

.error-message {
  font-size: 12px;
  margin-left: 15px;
  margin-bottom: 15px;
  display: block;
}

.submit-button {
  margin-top: 20px;
  margin-bottom: 20px;
  --border-radius: 8px;
  font-weight: 600;
  height: 50px;
}

.forgot-password {
  text-align: center;
  margin-top: 20px;
  
  a {
    color: var(--ion-color-primary);
    text-decoration: none;
    font-weight: 500;
    
    &:hover {
      text-decoration: underline;
    }
  }
}

.status-messages {
  margin-top: 15px;
  --background: transparent;
  
  p {
    margin: 5px 0;
  }
}

.error-messages {
  background-color: rgba(var(--ion-color-danger-rgb), 0.1);
  border-radius: 8px;
  padding: 10px;
}

// Responsive adjustments
@media (max-width: 576px) {
  .update-password-container {
    padding: 10px;
  }
  
  .form-field {
    margin-bottom: 8px;
  }
  
  .submit-button {
    margin-top: 15px;
    margin-bottom: 15px;
  }
}

// Dark mode adjustments
@media (prefers-color-scheme: dark) {
  .form-field {
    --background: rgba(255, 255, 255, 0.05);
  }
} 