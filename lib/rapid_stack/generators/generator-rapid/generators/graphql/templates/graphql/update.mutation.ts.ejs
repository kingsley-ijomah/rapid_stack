import { gql } from 'apollo-angular';

export const Update<%= h.toPascalCase(modelName) %>Mutation = gql`
  mutation update<%= h.toPascalCase(modelName) %>(
    $input: Update<%= h.toPascalCase(modelName) %>Input!
  ) {
    update<%= h.toPascalCase(modelName) %>(input: $input) {
      data {
        id
        <%= regularFields.map(field => `${h.toCamelCase(field.name)}`).join('\n        ') %>
<% if (relationshipFields && relationshipFields.length > 0) { %>
        <%= relationshipFields.map(field => `${h.toCamelCase(field.name)} { id }`).join('\n        ') %>
<% } %>
        createdAt
        updatedAt
      }
      errors
      message
      httpStatus
    }
  }
`; 