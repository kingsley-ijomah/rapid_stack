<div class="reset-password-container">
  <form (ngSubmit)="onSubmit()" #resetPasswordForm="ngForm">
    <h2>Reset Password</h2>
    
    <div *ngIf="!showRequestNewLink">
      <div class="form-group">
        <input
          type="password"
          id="password"
          name="password"
          [(ngModel)]="password"
          placeholder="Enter new password"
          required
        >
      </div>

      <div class="form-group">
        <input
          type="password"
          id="verifyPassword"
          name="verifyPassword"
          [(ngModel)]="verifyPassword"
          placeholder="Verify new password"
          required
        >
      </div>

      <button type="submit" [disabled]="!resetPasswordForm.form.valid || password !== verifyPassword">
        Update Password
      </button>
    </div>

    <div *ngIf="showRequestNewLink" class="request-new-link">
      <div class="form-group">
        <input
          type="email"
          id="email"
          name="email"
          [(ngModel)]="email"
          placeholder="Enter your email"
          required
        >
      </div>

      <button type="button" (click)="requestNewLink()" [disabled]="!email">
        Request New Reset Link
      </button>
    </div>

    <div *ngIf="errorMessage" class="error-message">
      {{ errorMessage }}
    </div>

    <div *ngIf="successMessage" class="success-message">
      {{ successMessage }}
    </div>

    <div class="login-link">
      Remember your password? <a routerLink="/login">Login</a>
    </div>
  </form>
</div> 