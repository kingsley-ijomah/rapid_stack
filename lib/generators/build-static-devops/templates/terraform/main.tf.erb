terraform {
  required_providers {
    time = {
      source = "hashicorp/time"
      version = "~> 0.9.0"
    }
    cloudflare = {
      source  = "cloudflare/cloudflare"
      version = "~> 4.0"
    }
  }
}

provider "cloudflare" {
  api_token = var.cloudflare_api_key
}

module "cloudflare_domain" {
  source = "./modules/cloudflare_domain"
  domains    = var.domains
  account_id = var.cloudflare_account_id
  app_name   = var.app_name
}