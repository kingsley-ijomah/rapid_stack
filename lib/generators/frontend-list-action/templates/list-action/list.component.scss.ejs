.list-container {
  padding: 16px;
  
  h2 {
    margin-bottom: 20px;
    color: var(--ion-color-primary);
  }
  
  .filters-container {
    display: flex;
    align-items: center;
    margin-bottom: 16px;
    
    .search-bar {
      flex: 1;
    }
  }
  
  .cards-container {
    margin-bottom: 20px;
    
    .item-card {
      margin-bottom: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      
      ion-card-content {
        padding: 8px;
      }
      
      .field-label {
        font-weight: 600;
        color: var(--ion-color-medium);
      }
      
      .field-value {
        word-break: break-word;
      }
      
      ion-row {
        padding: 5px 0;
        
        &:not(:last-child) {
          border-bottom: 1px solid var(--ion-color-light-shade);
        }
      }
    }
  }
  
  .no-data {
    text-align: center;
    padding: 30px;
    color: var(--ion-color-medium);
    background-color: var(--ion-color-light);
    border-radius: 8px;
  }
  
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    
    .page-info {
      margin: 0 15px;
      color: var(--ion-color-medium);
    }
  }
}

@media (max-width: 768px) {
  .cards-container {
    .item-card {
      .field-label, 
      .field-value {
        font-size: 14px;
      }
    }
  }
  
  .pagination {
    flex-direction: column;
    
    .page-info {
      margin: 10px 0;
    }
  }
} 