.two-factor-verify-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
  background-color: #f5f5f5;
}

.verify-card {
  max-width: 400px;
  width: 100%;
  padding: 24px;
}

.verify-content {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 20px;
}

.code-input {
  width: 100%;
  max-width: 300px;
  margin: 0 auto;

  input {
    text-align: center;
    font-size: 1.2em;
    letter-spacing: 4px;
  }
}

.button-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

mat-progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.verification-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  padding: 1rem;

  p {
    text-align: center;
    margin: 0;
  }

  .code-input-container {
    display: flex;
    gap: 0.5rem;
    justify-content: center;

    .digit-input {
      width: 3rem;
      height: 3.5rem;
      text-align: center;
      font-size: 1.5rem;
      border: 2px solid var(--ion-color-medium);
      border-radius: 8px;
      background: white;
      transition: all 0.2s ease;

      &:focus {
        border-color: var(--ion-color-primary);
        outline: none;
        box-shadow: 0 0 0 2px rgba(var(--ion-color-primary-rgb), 0.2);
      }

      &:disabled {
        background: var(--ion-color-light);
        opacity: 0.7;
      }
    }
  }

  .error-message {
    color: var(--ion-color-danger);
    text-align: center;
    margin: 0;
  }

  ion-button {
    margin-top: 1rem;
    min-width: 200px;
  }
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 1rem;

  p {
    margin: 0;
  }
} 