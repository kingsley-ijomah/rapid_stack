# frozen_string_literal: true

module Types
  class SetupTwoFactorInput < Types::BaseInputObject
    description "Input for setting up two-factor authentication"

    argument :userId, ID, required: true, description: "The ID of the user to set up 2FA for"
  end

  class VerifyTwoFactorSetupInput < Types::BaseInputObject
    description "Input for verifying two-factor authentication setup"

    argument :userId, ID, required: true, description: "The ID of the user to verify 2FA for"
    argument :code, String, required: true, description: "The verification code from the authenticator app"
  end
end
