---
development:
  clients:
    default:
      database: <%= ENV['MONGODB_DATABASE'] || "rapid_stack_dev" %>
      hosts:
        - <%= ENV['MONGODB_HOST'] || 'localhost:27017' %>
  options:
    raise_not_found_error: false
  driver_options:

test:
  clients:
    default:
      database: <%= ENV['MONGODB_DATABASE'] || "rapid_stack_test" %>
      hosts:
        - <%= ENV['MONGODB_HOST'] || 'localhost:27017' %>
      options:
        read:
          mode: :primary
        max_pool_size: 1
  options:
    raise_not_found_error: false

production:
  clients:
    default:
      database: <%= ENV['MONGODB_DATABASE'] %>
      hosts:
        - <%= ENV['MONGODB_HOST'] %>
      options:
        user: <%= ENV['MONGODB_USER'] %>
        password: <%= ENV['MONGODB_PASSWORD'] %>
        auth_source: admin
        retry_writes: true
  options:
    raise_not_found_error: false
  driver_options:
  